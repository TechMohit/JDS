<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:gravity="center">


    <android.support.v7.widget.CardView
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"

        app:cardBackgroundColor="#f5f1f1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Default"
                android:textSize="19sp"
                android:padding="5dp"
                android:layout_gravity="center"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#b1b0b0"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:id="@+id/finger_ll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="?attr/selectableItemBackground"
                    >

                    <ImageView
                        android:id="@+id/fingerAuth"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:background="@drawable/ic_fingerprint_grey"
                        android:padding="15dp"/>



                </LinearLayout>



                <LinearLayout
                    android:id="@+id/mpin_ll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="?attr/selectableItemBackground"
                    >

                    <ImageView
                        android:id="@+id/mPinAuth"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/ic_lock_a"
                        android:padding="15dp"/>


                </LinearLayout>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Select to choose default login method"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#b1b0b0"
                android:layout_marginTop="5dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/fingerPrintBtnLayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="?attr/selectableItemBackground"
                    >

                    <Button
                        android:id="@+id/btn_fingerPrint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Finger Print"
                        android:textColor="#7c7c7c"
                        android:background="@android:color/transparent"/>



                </LinearLayout>


                <View
                    android:id="@+id/viewVertical"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:background="#b1b0b0"
                    android:layout_weight="0.01"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="?attr/selectableItemBackground"
                    >

                    <Button
                        android:id="@+id/btn_mpin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#7c7c7c"
                        android:text="MPIN"
                        android:background="@android:color/transparent"/>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>








    </android.support.v7.widget.CardView>



</LinearLayout>