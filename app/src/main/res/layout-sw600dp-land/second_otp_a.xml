<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bckandscape"
    tools:context="com.jds.varadhi.jds.Login.FirstMobileNumberFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:alpha="0.5"
        android:background="#cae7ef8f">


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/mar_padd_5dp"
            app:cardElevation="@dimen/mar_padd_2dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="@dimen/dimens40"
            app:cardBackgroundColor="#00000000">

            <LinearLayout
                android:id="@+id/loginLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:background="#68e6ef6b"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="25dp"
                    android:layout_marginStart="@dimen/mar_padd_5dp"
                    android:layout_marginTop="25dp"
                    android:layout_weight="0.8"
                    android:background="@drawable/karnataka_map"
                    android:gravity="center"
                    android:visibility="gone">

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/mar_padd_5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/questrial"
                        android:gravity="center"
                        android:text="Please type the verification code sent to"
                        android:textSize="@dimen/text20sp" />

                    <TextView
                        android:id="@+id/tvUserMobileNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/mar_padd_5dp"
                        android:fontFamily="@font/questrial"
                        android:text="+9188******95"
                        android:textSize="@dimen/text20sp" />

                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="@dimen/dimen40dp"
                        android:layout_marginEnd="@dimen/mar_padd_5dp"
                        android:layout_marginStart="@dimen/mar_padd_5dp"
                        android:layout_marginTop="@dimen/mar_padd_10dp"
                        android:background="@drawable/card_shape_back"
                        android:orientation="horizontal">

                        <com.jds.varadhi.jds.Mpin
                            android:id="@+id/mPinOtp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="true"
                            android:gravity="center"
                            app:inputType="number"
                            app:password="false"
                            app:pinBackground="@drawable/example_drawable"
                            app:pinHeight="30dp"
                            app:pinLength="6"
                            app:pinWidth="30dp" />


                    </LinearLayout>

                    <Button
                        android:id="@+id/btnNextSecondFragment"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="@dimen/mar_padd_15dp"
                        android:background="@drawable/btn_round_shape_blue"
                        android:fontFamily="@font/questrial"
                        android:text="Next"
                        android:textSize="18dp"
                        android:textColor="@color/whitecolor" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/mar_padd_10dp"
                    android:layout_weight="0.3"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/mar_padd_10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/jds" />

                </LinearLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>





</RelativeLayout>

